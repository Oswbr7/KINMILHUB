<Window x:Class="GAMEHUB_V3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KINMIL HUB" Height="693" Width="1365"
        Background="#1e1e1e" WindowStartupLocation="CenterScreen">

	<DockPanel>
		<!-- Barra superior -->
		<StackPanel Orientation="Horizontal" Background="#2d2d2d" Height="40" DockPanel.Dock="Top">
			<Button Content="Seleccionar Carpeta"
                    Click="BtnSelectFolder_Click"
                    Margin="10,5"
                    Padding="10,5"
                    Foreground="White"
                    Background="#3c3c3c"
                    BorderThickness="0"
                    Cursor="Hand"/>
			<TextBox x:Name="SearchBox"
				Width="200"
				Height="25"
				VerticalAlignment="Center"
				Margin="10,5"
				Padding="5"
				Foreground="White"
				Background="#3c3c3c"
				BorderThickness="0"
			    TextChanged="SearchBox_TextChanged"
			    Text=""/>
			<Button Content="Buscar"
                Click="BtnSearch_Click"
                Margin="5,5"
                Padding="10,5"
                Foreground="White"
                Background="#3c3c3c"
                BorderThickness="0"
                Cursor="Hand"/>
			<!--<Button Content="Cambiar Imagen"
                Click="BtnChangeImage_Click"
                Margin="5,5"
                Padding="10,5"
                Foreground="White"
                Background="#3c3c3c"
                BorderThickness="0"
                Cursor="Hand"/>-->
			<Button Content="Subir Imagen"
                Click="BtnUploadImage_Click"
                Margin="5,5"
                Padding="10,5"
                Foreground="White"
                Background="#3c3c3c"
                BorderThickness="0"
                Cursor="Hand"/>
		</StackPanel>

		<!-- Contenido -->
		<ListBox x:Name="GameList"
                 MouseDoubleClick="GameList_MouseDoubleClick"
                 Background="Transparent"
                 BorderThickness="0"
                 SelectionMode="Single"
                 HorizontalContentAlignment="Stretch"
                 VerticalContentAlignment="Stretch"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 ScrollViewer.VerticalScrollBarVisibility="Auto">

			<!-- Panel que acomoda los elementos en cuadrícula -->
			<ListBox.ItemsPanel>
				<ItemsPanelTemplate>
					<WrapPanel Orientation="Horizontal"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Top"
                               ItemWidth="260"
                               ItemHeight="300"
                               Margin="10"/>
				</ItemsPanelTemplate>
			</ListBox.ItemsPanel>

			<!-- Plantilla para cada elemento -->
			<ListBox.ItemTemplate>
				<DataTemplate>
					<StackPanel>
					    <Border Width="220"
                                Height="250"
                                Margin="10"
                                Background="#2d2d2d"
                                CornerRadius="10"
                                BorderBrush="#444"
							    Padding="5"
                                BorderThickness="1">
							    <Image Source="{Binding ImagePath}"
                                       Stretch="UniformToFill"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       SnapsToDevicePixels="True"/>
					    </Border>
						<TextBlock Text="{Binding Name}"
                                    Foreground="White"
                                    FontSize="14"
								    FontWeight="Bold"
                                    HorizontalAlignment="Center"
                                    Margin="5,2,5,0"
                                    TextWrapping="Wrap"/>
				    </StackPanel>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
	</DockPanel>
</Window>
